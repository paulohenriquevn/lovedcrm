{
  "name": "Webhook Simulator",
  "request": {
    "method": "POST",
    "urlPath": "/simulate/webhook",
    "bodyPatterns": [
      {
        "matchesJsonPath": "$.type"
      }
    ]
  },
  "response": {
    "status": 200,
    "jsonBody": {
      "message": "Webhook simulation triggered",
      "event_id": "evt_test_{{randomValue type='ALPHANUMERIC' length=24}}",
      "received": "{{now}}"
    }
  }
}
